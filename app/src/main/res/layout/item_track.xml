<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/album_art" />

        <TextView
            android:id="@+id/text_position"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_artist"
            android:layout_alignTop="@+id/image_cover"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_song"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/image_cover"
            android:layout_marginStart="5dp"
            android:maxLines="2"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_artist"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_song"
            android:layout_marginStart="5dp"
            android:maxLines="2"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_album"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_cover"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:maxLines="2"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/item_track"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

</RelativeLayout>